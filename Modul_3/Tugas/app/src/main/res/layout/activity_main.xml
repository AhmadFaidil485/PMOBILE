<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ip"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ip" />

        </LinearLayout>


        <ImageView
            android:id="@+id/image"
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/images" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="201dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|center|center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Iphone 12 Pro Max
                                Rp. 13. 0000. 000"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Itel Vision 1

  Rp. 900. 0000"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/sams"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/sams" />




        </LinearLayout>

        <ImageButton
            android:id="@+id/real"
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/real" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="205dp"
                android:layout_height="58dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Samsung Galaxy M11

                 Rp. 2. 080. 0000"
                android:textColor="@color/black" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Realme C11
 Rp. 1. 800. 000"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/redmi"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/redmi">

            </ImageButton>
        </LinearLayout>


        <ImageButton
            android:id="@+id/vivo"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/vivo"></ImageButton>
    </LinearLayout>

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="205dp"
                    android:layout_height="58dp"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Redmi Note 8 Pro

 Rp. 1. 949. 0000"
                    android:textColor="@color/black" />



            </LinearLayout>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="205dp"
                android:layout_height="58dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Vivo V12

 Rp. 4. 098. 0000"
                android:textColor="@color/black" />
        </LinearLayout>


</LinearLayout>